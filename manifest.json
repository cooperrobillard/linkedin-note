{
  "manifest_version": 3,
  "name": "LinkedIn Note (Cooper)",
  "version": "0.0.1",
  "description": "In-tab connection note helper (user-triggered).",
  "permissions": ["storage", "activeTab", "scripting", "clipboardWrite"],
  "host_permissions": [
    "https://www.linkedin.com/*",
    "https://api.openai.com/*"
  ],
  "background": { "service_worker": "src/service_worker.js" },
  "action": { "default_popup": "popup/popup.html" },
  "options_page": "options/options.html",
"content_scripts": [
  {
    "matches": ["https://www.linkedin.com/in/*"],
    "js": ["src/heuristics.js", "src/content.js"],
    "css": ["src/inject.css"],
    "run_at": "document_idle"
  }
]
}
